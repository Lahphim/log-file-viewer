if response.status
    if response.data.length > 0
        table.table.table-striped.table-bordered.table-responsive(data-page=page)
            tbody
                each item, index in response.data
                    tr
                        th(scope="row")= (((page-1)*10)+(index+1))
                        td= item
    else
        h2.info-message(data-page=page)= "No items."
else
    h2.info-message= response.message